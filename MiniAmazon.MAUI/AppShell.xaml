<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MiniAmazon.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MiniAmazon.MAUI"
    xmlns:views="clr-namespace:MiniAmazon.MAUI.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="MiniAmazon.MAUI">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Inventory Management"
        ContentTemplate="{DataTemplate views:InventoryView}"
        Route="Inventory" />

    <ShellContent
        Title="Product Management"
        ContentTemplate="{DataTemplate views:ProductView}"
        Route="Product" />

    <ShellContent
        Title="Shopping Management"
        ContentTemplate="{DataTemplate views:ShopView}"
        Route="Shop" />

    <ShellContent
        Title="Receipt Display"
        ContentTemplate="{DataTemplate views:ReceiptView}"
        Route="Receipt" />

    <ShellContent
        Title="Import Product"
        ContentTemplate="{DataTemplate views:ImportView}"
        Route="Import" />

</Shell>
